/* sss */

.sss .aaa>view {
  display: inline-block;
}

.sss .aaa>view:first-child {
  height: 40rpx;
  line-height: 40rpx;
  width: 6rpx;
  background: #faf606;
  align-self: center;
  margin-left: 10rpx;
  vertical-align: sub;
}

.sss .aaa>view:last-child {
  height: 80rpx;
  line-height: 80rpx;
  width: 150rpx;
  padding-left: 15rpx;
  font-size: 0.8rem;
  font-weight: 600;
  color: #f8f5ea;
}

.sss .newslist {
  display: inline-block;
  width: 49%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.sss image {
  width: 90%;
}

.sss .newslist .pic {
  width: 100%;
  text-align: center;
}

.sss .newslist .pic image {
 width:72%;
margin:0 auto;
height:288rpx;

}

.sss .newslist .title {
  justify-content: space-between;
  text-align: center;
}

.sss .newslist .title .address {
  font-size: 0.8rem;
  color: rgb(252, 250, 250);
  overflow: hidden;
  width: 100%;
  text-align: center;
}

.sss .newslist .title .money {
  color: red;
  font-size: 0.7rem;
}
